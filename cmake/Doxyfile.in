#
# Project
#

PROJECT_NAME = @PROJECT_NAME@
PROJECT_NUMBER = @PROJECT_VERSION@

#
# Input
#

INPUT = @PROJECT_SOURCE_DIR@/sal
RECURSIVE = YES

INPUT += @PROJECT_SOURCE_DIR@/README.md
USE_MDFILE_AS_MAINPAGE = README.md

FILE_PATTERNS = *.hpp *.md
EXCLUDE_PATTERNS = *.test.hpp **/__bits/*

EXCLUDE_SYMBOLS = sal::__bits sal::*::__bits __* std
JAVADOC_AUTOBRIEF = YES
INLINE_INHERITED_MEMB = YES
BUILTIN_STL_SUPPORT = YES
ENABLE_PREPROCESSING = YES
MACRO_EXPANSION = YES
EXPAND_ONLY_PREDEF = YES
PREDEFINED = \
  __sal_begin="namespace sal {" \
  __sal_end="}"

#
# Output
#

OUTPUT_DIRECTORY =
SHOW_USED_FILES = NO
QUIET = YES

# html
GENERATE_HTML = YES
HTML_OUTPUT = docs
GENERATE_TREEVIEW = YES
DISABLE_INDEX = YES
COLS_IN_ALPHA_INDEX = 1

# latex
GENERATE_LATEX = NO
